<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_tagstrm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Tag Stream 조회"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_log_period"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="발생 일시 기준 조회 기간"
            android:layout_weight="1"
            />
        <EditText
            android:id="@+id/et_log_period"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="분 단위로 입력"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_log_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="목록 반환 개"
            android:layout_weight="1"
            />
        <EditText
            android:id="@+id/et_log_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="개수 입력"
            android:layout_weight="1"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조회" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_log_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="조회 결과 없음"/>
    </ScrollView>


</LinearLayout>